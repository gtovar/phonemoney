
<h1>Reporte</h1>


<table class="table">
  <thead>
    <tr>
      <th>Numero Telefonico</th>
      <th>Mensaje</th>
      <th>Marcacion</th>
      <th>Fecha</th>

      <% if admin_signed_in? %>
        <th></th>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.phone %></td>
        <td><%= report.message %></td>
        <td><%= report.numero %></td>
        <td><%= report.date %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Show', report %></td>
          <td><%= link_to 'Edit', edit_report_path(report) %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Report', new_report_path %>
<% end %>
